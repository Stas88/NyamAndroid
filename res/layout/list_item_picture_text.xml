<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/list_item_selector"
    >
    
    <ImageView
		android:id="@+id/icon"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="5dp"/>
     
    <TextView android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="70dp" 
        android:layout_toRightOf="@id/icon"
        android:layout_alignParentTop="true"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="#000000" />
     
    <RelativeLayout 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/icon"
	    android:paddingBottom="3dp"
	    android:layout_alignParentBottom="true"
	    >
	     
    <ImageView android:id="@+id/icon_little1"
        android:layout_width="28dp"
        android:layout_height="28dp" 
        android:src="@drawable/cooked_dishes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
     
    <TextView android:id="@+id/txtTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/icon_little1"
        android:textStyle="normal"
        android:textColor="#000000" 
        android:textSize="22dp"
        android:text="32"
        android:layout_alignParentBottom="true"/>
     
    <ImageView android:id="@+id/icon_little2"
        android:layout_width="28dp"
        android:layout_height="28dp" 
        android:src="@drawable/rating"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
     
    <TextView android:id="@+id/txtTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@id/icon_little2"
        android:textStyle="normal"
        android:textColor="#000000" 
        android:textSize="22dp"
        android:text="2"
        android:layout_alignParentBottom="true"/>
     
     
    
    <TextView android:id="@+id/txtTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textStyle="normal"
        android:textColor="#000000" 
        android:textSize="22dp"
        android:text="7" 
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    
    <ImageView android:id="@+id/icon_little3"
        android:layout_width="28dp"
        android:layout_height="28dp" 
        android:src="@drawable/favorite_dark"
        android:layout_toLeftOf="@id/txtTitle3"
        android:layout_alignParentBottom="true"	/>
     
     
			
     </RelativeLayout>
   
	<LinearLayout
	    android:background="#f0c6a6"
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:layout_alignParentBottom="true">
	</LinearLayout>       
	 
</RelativeLayout>




